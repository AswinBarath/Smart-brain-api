// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int      @id @default(autoincrement())
  name   String
  email  String   @unique
  joined DateTime @default(now())
  entries Int     @default(0)

  @@map("users")
}

model Login {
  id    Int    @id @default(autoincrement())
  hash  String
  email String @unique

  @@map("login")
} 